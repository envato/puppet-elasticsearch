cluster:
  name: <%= @cluster %>

node:
  name: boxen
  max_local_storage_nodes: 1

path:
  conf: <%= @configdir %>/
  data: <%= @datadir %>/
  logs: <%= @logdir %>/

network:
  bind_host: <%= @host %>
  publish_host: <%= @host %>
  tcp:
    blocking: true

transport:
  tcp:
    port: <%= @transport_port %>

http:
  port: <%= @http_port %>
  max_content_length: 500mb

gateway:
  recover_after_nodes: 1
  expected_nodes: 1

script:
  inline: true
  stored: true
